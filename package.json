{
  "name": "blazed-past-us",
  "version": "0.3.2",
  "description": "A static blog framework made for developers that allows content to be written in Markdown directly from the IDE.",
  "license": "MIT",
  "author": "gass-git",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/gass-git/blazed-past-us"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "blazed-past-us": "dist/cli/install-scaffold.js",
    "blazed": "dist/cli/build.js"
  },
  "scripts": {
    "build": "rimraf dist && tsc && xcopy \"src\\template\" \"dist\\template\" /E /I /Y",
    "dev": "rimraf --glob \"*.tgz\" && npm run build && npm pack && npm link"
  },
  "devDependencies": {
    "@types/node": "^25.1.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "rehype-pretty-code": "^0.14.1",
    "rehype-stringify": "^10.0.1",
    "remark": "^15.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2"
  },
  "keywords": [
    "static-site",
    "blog",
    "markdown"
  ]
}
